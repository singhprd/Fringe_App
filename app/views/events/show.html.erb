<%= react_component('EventCard', event: @event.to_json, venue: @event.venue.to_json, user_signed_in: !current_user.nil?) %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn btn-default'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_event_path(@event),:class => 'btn btn-default' if current_user.try(:admin?) %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :class => 'btn btn-danger',
              :data => {
                :confirm => t(
                  '.confirm', :default => t(
                  "helpers.links.confirm",
                  :default => 'Are you sure?'
                  )
                )
              } if current_user.try(:admin?) %>
  </div>
</div>
<%= commontator_thread(@event) %>
