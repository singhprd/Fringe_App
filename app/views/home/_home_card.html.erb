<% @events.each do |event| %>

<%= react_component('EventCard',
props: {
	event: event.to_json,
 	venue: event.venue.to_json,
 	performances: event.performances.to_json,
 	userSignedIn: !current_user.nil?,
 	isFavourited: Event.favourited?(current_user, event.try(:id)) 
})
 %>

<% end %>

<%= paginate @events %>

